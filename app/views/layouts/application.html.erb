        <!--      <li><%= link_to "Link3", "/path3"  %></li>-->
        <!--    </ul>-->
        <!--  </div><!--/.well -->
        <!--</div><!--/span-->
      </div><!--/row-->

      <footer>
        <p>&copy; Company 2017</p>
      </footer>

    </div> <!-- /container -->

  </body>
</html>
