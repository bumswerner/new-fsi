<%- model_class = Studytype -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:symbol) %></th>
      <th><%= model_class.human_attribute_name(:description) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @studytypes.each do |studytype| %>
      <tr>
        <td><%= studytype.name %></td>
        <td><%= studytype.symbol %></td>
        <td><%= truncate(studytype.description, length: 100) %></td>
        <td>
          <%= link_to t('.show', :default => t("helpers.links.show")),
                      studytype_path(studytype), :class => 'btn btn-default btn-xs' %>
                      
          <% if logged_in?(:admin, :moderator) %>
            <%= link_to t('.edit', :default => t("helpers.links.edit")),
                        edit_studytype_path(studytype), :class => 'btn btn-default btn-xs' %>
            <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                        studytype_path(studytype),
                        :method => :delete,
                        :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                        :class => 'btn btn-xs btn-danger' %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<% if logged_in?(:admin, :moderator) %>
  <%= link_to t('.new', :default => t("helpers.links.new")),
              new_studytype_path,
              :class => 'btn btn-primary' %>
<% end %>
