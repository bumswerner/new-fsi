<%- model_class = Studytype -%>

<div class="row">
  <div class="col-lg-4 col-lg-offset-4 
              col-xs-6 col-xs-offset-3
              well well-sm
              moderator-index-header">
   Show - <%= t '.title', :default => model_class.model_name.human %>
  </div>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @studytype.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:symbol) %>:</strong></dt>
  <dd><%= @studytype.symbol %></dd>
  <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
  <dd><%= @studytype.description %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              moderator_studytypes_path, :class => 'btn btn-default'  %>
<% if logged_in?(:admin, :moderator) %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
                edit_moderator_studytype_path(@studytype), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                moderator_studytype_path(@studytype),
                :method => 'delete',
                :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                :class => 'btn btn-danger' %>
<% end %>