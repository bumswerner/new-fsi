<% target_url = @faculty.id.present? ? moderator_faculty_url : moderator_faculties_path %>

<%= form_for(@faculty, url: target_url, :html => { :class => "form-horizontal faculty" }) do |f| %>

  <%= render 'shared/form_errors', obj: @faculty %>

  <div class="form-group">
    <%= f.label :name, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :name, :class => 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :symbol, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :symbol, :class => 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :description, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_area :description, rows: 6, :class => 'form-control', placeholder: 'Description of faculty' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                moderator_faculties_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
