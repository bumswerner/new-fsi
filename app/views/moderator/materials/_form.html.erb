<% target_url = @material.id.present? ? moderator_material_url : moderator_materials_path %>

<%= form_for @material, url: target_url, :html => { multipart: true, :class => "form-horizontal material" } do |f| %>

  <% if @material.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@material.errors.count, "error") %> prohibited this material from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @material.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :name, :class => 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :discription, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :discription, :class => 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :data, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.file_field :data, :class => 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :section_id, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
     <%= select_tag "material[section_id]", 
          options_from_collection_for_select(Section.all, "id", "name",
          :selected => @material.section_id),
          :prompt => "Please select",
          :class => 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :lecture_id, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
     <%= select_tag "material[lecture_id]", 
          options_from_collection_for_select(Lecture.all, "id", "name",
          :selected => @material.lecture_id),
          :prompt => "Please select",
          :class => 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                moderator_materials_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
