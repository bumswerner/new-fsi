<%- model_class = Lecture -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @lecture.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:symbol) %>:</strong></dt>
  <dd><%= @lecture.symbol %></dd>
  <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
  <dd><%= @lecture.description %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              moderator_faculty_lectures_path(params[:faculty_id]), :class => 'btn btn-default' %>
<% if logged_in?(:admin, :moderator) %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
                edit_moderator_faculty_lecture_path(params[:faculty_id], @lecture), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                moderator_faculty_lecture_url(params[:faculty_id], @lecture),
                :method => 'delete',
                :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                :class => 'btn btn-danger' %>
<% end %>
